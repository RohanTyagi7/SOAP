<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.15 0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.15 0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.7" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075"/>
        </xacro:inertial_box> 
    </link>

    <!-- LEFT PROPELLER -->
    <joint name="left_propeller_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_propeller"/>
        <origin xyz="-.03 -0.1 0.02" rpy="0 ${pi/2} 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_propeller">
        <visual>
            <geometry>
                <cylinder radius=".02" length=".06"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius=".02" length=".06"/>
            </geometry>
        </collision>
    </link>
    <xacro:inertial_cylinder mass=".03" x="-0.3" y="-0.1" z="0.02">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

    <!-- RIGHT PROPELLER-->
    <joint name="right_propeller_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_propeller"/>
        <origin xyz="-.03 0.1 0.02" rpy="0 ${pi/2} 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_propeller">
        <visual>
            <geometry>
                <cylinder radius=".02" length=".06"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius=".02" length=".06"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass=".03" x="0.3" y="0.1" z="0.02">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
    </link>

</robot>